<%= form_for [post, comment], remote: true do |f| %>
  <div class="row">
    <% if comment.errors.any? %>
      <div class="alert alert-danger">
        <h4>There are <%= comment.errors.count %> errors.</h4>
        <ul>
          <% comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= form_group_tag(comment.errors[:body]) do %>
        <%= f.label :comment %>
        <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Make a new comment." %>
      <% end %>
    </div>
    <div class="col-md-4"> 
      <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>

